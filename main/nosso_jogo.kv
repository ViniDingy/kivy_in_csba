<Gerenciador>:
    Menu:
        name: 'menu'
    Player1:
        name: 'player1'
    Player2:
        name: 'player2'
<Menu>:
    BoxLayout: #BoxLayout1
        orientation: 'vertical'
        padding: ('40dp', '40dp', '40dp', '40dp')
        canvas:
            Rectangle:
                pos:self.pos 
                size:self.size
                source:root.imagem_fundo
        BoxLayout: #BoxLayout2
            padding: ('25dp', '25dp', '25dp', '25dp')
            canvas:
                Color:      
                    rgba: 30/255, 30/255, 30/255, 1
                Rectangle:
                    pos:self.pos
                    size:self.size
            BoxLayout:#BoxLayout3
                orientation: 'vertical'
                canvas:
                    Color: 
                        rgba: 20/255, 20/255, 20/255, .5
                    Rectangle:
                        pos:self.pos 
                        size:self.size
                AnchorLayout:#AnchorLayout4
                    padding: ('25dp', '25dp', '25dp', '25dp')
                    anchor_x: 'center'
                    anchor_y: 'center'
                    canvas.before:
                        Color:
                            rgba: 10/255, 10/255, 10/255, .5
                        Rectangle:
                            pos:self.pos
                            size:self.size
                    Label: 
                        font_size:50
                        font_name: root.pasta_fontes 
                        text:'BATTLESHIP'
                AnchorLayout:
                    padding: ('25dp', '25dp', '25dp', '25dp')
                    anchor_x: 'center'  
                    anchor_y: 'top'
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_x: None
                        size_hint_y: None 
                        size: 200, 100
                        Button:
                            size_hint_x: None
                            size_hint_y: None 
                            size: 200, 100
                            font_size: 25 
                            bold: True
                            text:'Iniciar Jogo'
                            on_press: app.root.current = 'player1'
                AnchorLayout:
                    anchor_x: 'left'
                    anchor_y: 'bottom'
                    BoxLayout:
                        Label:
                            text:'Som:'
                        CheckBox:   
                            id: check
                            
<Player1>:
    BoxLayout:
        padding: ('20dp', '20dp', '20dp', '20dp')
        canvas:
            Color:
                rgba: 20/255, 20/255, 20/255, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        BoxLayout:
            size_hint:(1, .4)
            padding: ('20dp', '20dp', '20dp', '20dp')
            canvas.before:
                Color: 
                    rgba: 40/255, 40/255, 40/255, .5
                Rectangle:
                    pos:self.pos
                    size: self.size 
            orientation: 'vertical'
            Label:
                pos: self.pos
                font_size: 50
                bold: True
                text: 'Player 1'
            Button:
                size_hint: .4, 1
                pos_hint:{'center_x': 0.5, 'center_y': 0.1}
                text:'Iniciar'
                on_release: root.Inicio()
            Button:
                size_hint: .4, 1
                pos_hint:{'center_x': 0.5, 'center_y': 0.1}
                text:'Proximo'
                on_release: app.root.current = 'player2'
            Widget:
                canvas:
                    Color:
                        rgba: 20/255, 20/255, 237/255, 1
                    Rectangle:
                        pos:self.pos
                        size: 800, 5
            Label:
                id: chat1
                text:'Olá'
        BoxLayout:
            id: tabuleiro1
            orientation: 'vertical'
            padding: ('20dp', '20dp', '20dp', '20dp')
            canvas:
                Color:
                    rgba: 40/255, 40/255, 40/255, .5
                Rectangle:
                    pos: self.pos 
                    size: self.size 
            GridLayout:
                id:gradtab1
                cols: 10
                rows: 10
            
<Player2>:
    BoxLayout:
        padding: ('20dp', '20dp', '20dp', '20dp')
        canvas:
            Color:
                rgba: 20/255, 20/255, 20/255, 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        BoxLayout:
            size_hint:(1, .4)
            padding: ('20dp', '20dp', '20dp', '20dp')
            canvas.before:
                Color: 
                    rgba: 40/255, 40/255, 40/255, .5
                Rectangle:
                    pos:self.pos
                    size: self.size 
            orientation: 'vertical'
            Label:
                pos: self.pos
                font_size: 50
                bold: True
                text: 'Player 2'
            Button:
                size_hint: .4, 1
                pos_hint:{'center_x': 0.5, 'center_y': 0.1}
                text:'Iniciar'
                on_release: root.Inicio()
            Button:
                size_hint: .4, 1
                pos_hint:{'center_x': 0.5, 'center_y': 0.1}
                text:'Proximo'
                on_release: app.root.current = 'player1'
            Widget:
                canvas:
                    Color:
                        rgba: 237/255, 20/255, 20/255, 1
                    Rectangle:
                        pos:self.pos
                        size: 800, 5
            Label:
                id: chat2
                text:"Olá"
        BoxLayout:
            id: tabuleiro2
            orientation: 'vertical'
            padding: ('40dp', '40dp', '40dp', '40dp')
            canvas:
                Color:
                    rgba: 40/255, 40/255, 40/255, .5
                Rectangle:
                    pos: self.pos 
                    size: self.size 
            GridLayout:
                id:gradtab2
                cols: 10
                rows: 10